<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SueChef</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SueChef.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/js/carousel.js"></script>
    <script src="~/js/backtotopbutton.js"></script>
    <script src="~/js/homepagemealplanbutton.js"></script>

    @* Adding this in here so we can use the Logo name with font if we wanted to *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Macondo+Swash+Caps&display=swap" rel="stylesheet">
    @* Adding this in here so we can use the Logo name with font if we wanted to *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Macondo+Swash+Caps&display=swap" rel="stylesheet">

</head>

<body>
    @if (ViewData["HideNavAndFooter"] == null)
    {
        <header class="sticky top-0 border-gray-200 bg-rose-800 px-6 py-3 flex items-center justify-between relative z-50">

            <!-- Burger menu on the left -->
            <button id="menuButton" class="p-2 rounded-md hover:bg-rose-900">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>

            <!-- Logo in the Middle-->
            <a href="/" class="absolute left-1/2 transform -translate-x-1/2 flex items-center select-none">
                <span class="text-white text-3xl md:text-3xl lg:text-4xl hover:text-orange-400"
                    style="font-family: 'Macondo Swash Caps', cursive;">
                    SueChef
                </span>
                
            </a>

            <!-- Old code if we wanted to use image instead of font -->

            @* <a href="/" class="absolute left-1/2 transform -translate-x-1/2 flex items-center space-x-2">
            <img src="~/images/suechef-name.png" alt="SueChef logo"
                class="w-24 h-24 md:w-30 md:h-30 lg:w-36 lg:h-36 hover:brightness-200 hover:saturate-200">
        </a> *@

            <!-- Search on right with the expanding search for web -->
            <div class="flex items-center ml-auto space-x-2">
                <div id="desktopSearch"
                    class="hidden md:block ml-2 overflow-hidden transition-all duration-300 ease-in-out w-0">
                    <input type="text" placeholder="Search recipes..."
                        class="p-2 w-full rounded-md text-gray-900 focus:outline-none focus:ring-1 focus:ring-rose-900" />
                </div>
                <button id="searchButton" class="p-2 rounded-full hover:bg-rose-900">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" viewBox="0 0 24 24"
                        fill="currentColor">
                        <path
                            d="M10 2a8 8 0 105.293 14.293l4.707 4.707a1 1 0 001.414-1.414l-4.707-4.707A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z" />
                    </svg>
                </button>

                <!-- Lil guy on the right -->
                <button id="accountButton" class="p-1 rounded-full hover:bg-rose-900">
                    <img src="~/images/account-icon.png" alt="Account icon" class="w-8 h-8 object-contain" />
                </button>
            </div>
        </header>

        <!-- This bit is the burger menu for the main website navigation (for mobile in future, both for now) -->
        <div id="sideMenu"
            class="fixed top-0 left-0 h-full w-64 transform -translate-x-full transition-transform duration-300 ease-in-out z-40 backdrop-blur-sm bg-white/80 overflow-y-auto">
            <nav class="flex flex-col mt-20 space-y-4 px-6">
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Seasonal
                    Recipes</a>
                <a asp-controller="Categories" asp-action="Index" asp-route-category="vegetarian" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Vegetarian
                    Recipes</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Allergy Friendly
                    Recipes</a>
                <a asp-controller="Categories" asp-action="Index" asp-route-category="quick" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Quick Meals</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Budget Meals</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Baked Goods</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Our Chefs</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Request A
                    Recipe</a>
                <a href="#"
                    class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Subscriptions</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Newsletters</a>
                <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Download Our
                    App</a>
            </nav>
        </div>

        <!-- Adding logic here to show logged in and logged out users different things -->
        var userId = Context.Session.GetInt32("user_id");

        <!-- This bit is the burger menu for account page stuff (for mobile in future, both for now) -->
        <div id="sideMenuAccount"
            class="fixed top-0 right-0 h-full w-64 transform translate-x-full transition-transform duration-300 ease-in-out z-40 backdrop-blur-sm bg-white/70">
            <nav class="flex flex-col mt-20 space-y-4 px-6 text-gray-700">

                @if (userId != null)
                {

                    <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">My Shopping
                        List</a>
                    <a href="/MealPlans" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">My Meal
                        Plans</a>
                    <a href="/Favourites" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Favourites</a>
                    <a href="#" class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Account
                        Settings</a>
                    <form asp-controller="Sessions" asp-action="Signout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" data-testid="signout" id="signout"
                            class="block w-full text-left hover:bg-rose-800 hover:text-white text-gray-700 px-4 py-2 rounded-md">Sign
                            Out</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Sessions" asp-action="New"
                        class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Sign In</a>

                    <a asp-controller="Users" asp-action="New"
                        class="hover:bg-rose-800 hover:!text-white !text-gray-700 px-4 py-2 rounded-md">Register</a>
                }
            </nav>
        </div>

        <!-- Hidden search bar bit (for mobile) -->
        <div id="mobileSearch"
            class="hidden md:hidden fixed top-[60px] w-full px-4 py-3 shadow-md z-40 rounded-lg backdrop-blur-sm bg-white/70">
            <input type="text" placeholder="Search recipes..."
                class="w-full p-2 rounded-md text-gray-900 focus:outline-none focus:ring-1 focus:ring-rose-900" />
        </div>
    }

    @if (ViewData["HideNavAndFooter"] != null)
    {
        <!-- Centered pages (like Sign In) -->
        <div class="min-h-screen bg-gradient-to-br from-rose-900 to-rose-700 flex flex-col">
            <main role="main" class="flex flex-1 items-start justify-center mt-4 md:mt-12 md:items-start">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <!-- Normal pages -->
        <div class="container mx-auto">
            <main id="MainContent" role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Time for the footer now -->

        <footer class="bg-rose-800">
            <div class="relative mx-auto max-w-6xl px-4 py-4 sm:px-6 lg:px-6 lg:pt-6 md:py-2 lg:py-2">
                <!-- This is the back to the top button -->
                @* <div class="absolute right-6 top-4 sm:right-6 sm:top-6 lg:right-8 lg:top-8">
                <a href="#MainContent"
                    class="inline-block rounded-full bg-white p-2 !text-gray-700 hover:!text-white shadow-sm transition hover:bg-rose-700 sm:p-3 lg:p-4">
                    <span class="sr-only">Back to top</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
                            clip-rule="evenodd" />
                    </svg>
                </a>
            </div> *@
                <div>
                    <div>
                        <div
                            class="flex flex-col items-center justify-center text-white lg:flex-row lg:justify-between lg:items-center gap-2 pb-5">
                            <div class="flex flex-col items-center lg:items-start">
                                <span class="text-5xl font-semibold" style="font-family: 'Macondo Swash Caps', cursive;">
                                    SueChef
                                </span>
                                <span class="text-base font-medium -mt-2 ml-10 md:ml-14 lg:ml-14 italic text-orange-600"
                                    style="font-family: 'Macondo Swash Caps', cursive;">
                                    Bon Appétit
                                </span>
                            </div>
                            <ul class="mt-4 flex flex-wrap justify-center gap-4 md:gap-8 lg:mt-2 lg:justify-end lg:gap-12">
                                <li><a href="#" class="relative inline-block !text-white transition duration-300
                          after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-full
                          after:origin-left after:scale-x-0 after:bg-white after:transition-transform after:duration-300
                          hover:after:scale-x-100 ">About Us</a></li>
                                <li><a href="#" class="relative inline-block !text-white transition duration-300
                          after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-full
                          after:origin-left after:scale-x-0 after:bg-white after:transition-transform after:duration-300
                          hover:after:scale-x-100">Careers</a></li>
                                <li><a href="#" class="relative inline-block !text-white transition duration-300
                          after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-full
                          after:origin-left after:scale-x-0 after:bg-white after:transition-transform after:duration-300
                          hover:after:scale-x-100">Privacy</a></li>
                                <li><a href="#" class="relative inline-block !text-white transition duration-300
                          after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-full
                          after:origin-left after:scale-x-0 after:bg-white after:transition-transform after:duration-300
                          hover:after:scale-x-100">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Floating Back to Top Button -->
        <button id="back-to-top"
            class="hidden fixed bottom-28 left-20 md:block lg:block md:left-auto md:right-20 lg:right-20 bg-orange-500 text-white p-3 rounded-full shadow-lg hover:bg-orange-600 transition-all duration-300 opacity-0 pointer-events-none z-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
            </svg>
        </button>
    }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="/js/navbar.js" asp-append-version="true"></script>
    <script src="/js/recipeDetails.js" asp-append-version="true"></script>
    <!-- Lucide Icons -->
<script src="https://unpkg.com/lucide@latest"></script>
<script>
    lucide.createIcons();
</script>
</body>

</html>

