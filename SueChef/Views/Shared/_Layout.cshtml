<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SueChef</title>
    <script type="importmap"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SueChef.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="border-b border-gray-200 bg-rose-800 px-6 py-3 flex items-center justify-between relative z-50">
        <!-- Burger menu on the left -->
        <button id="menuButton" class="p-2 rounded-md hover:bg-rose-900">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

        <!-- Logo in the Middle-->
        <a href="/" class="absolute left-1/2 transform -translate-x-1/2 flex items-center space-x-2">
            <img src="~/images/suechef-name.png" alt="SueChef logo" class="w-24 h-24">
        </a>

        <!-- Search on right -->
        <div class="flex items-center ml-auto">
            <button id="searchButton" class="p-2 rounded-full hover:bg-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" viewBox="0 0 24 24"
                    fill="currentColor">
                    <path
                        d="M10 2a8 8 0 105.293 14.293l4.707 4.707a1 1 0 001.414-1.414l-4.707-4.707A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z" />
                </svg>
            </button>

            <!-- Lil guy on the right -->
            <button id="accountButton" class="p-2 rounded-full hover:bg-rose-900">
                <img src="~/images/account-icon.png" alt="Account icon" class="w-7 h-7 object-contain" />
            </button>
        </div>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SueChef - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

