<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SueChef</title>
    <script type="importmap"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SueChef.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/js/carousel.js"></script>


</head>

<body>
    <header class="sticky top-0 border-gray-200 bg-rose-800 px-6 py-3 flex items-center justify-between relative z-50">

        <!-- Burger menu on the left -->
        <button id="menuButton" class="p-2 rounded-md hover:bg-rose-900">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

        <!-- Logo in the Middle-->
        <a href="/" class="absolute left-1/2 transform -translate-x-1/2 flex items-center space-x-2">
            <img src="~/images/suechef-name.png" alt="SueChef logo" class="w-24 h-24 md:w-30 md:h-30 lg:w-36 lg:h-36">
        </a>


        <!-- Search on right with the expanding search for web -->
        <div class="flex items-center ml-auto space-x-2">
            <div id="desktopSearch"
                class="hidden md:block ml-2 overflow-hidden transition-all duration-300 ease-in-out w-0">
                <input type="text" placeholder="Search recipes..."
                    class="p-2 w-full rounded-md text-gray-900 focus:outline-none focus:ring-1 focus:ring-rose-900" />
            </div>
            <button id="searchButton" class="p-2 rounded-full hover:bg-rose-900">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" viewBox="0 0 24 24"
                    fill="currentColor">
                    <path
                        d="M10 2a8 8 0 105.293 14.293l4.707 4.707a1 1 0 001.414-1.414l-4.707-4.707A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z" />
                </svg>
            </button>

            <!-- Lil guy on the right -->
            <button id="accountButton" class="p-2 rounded-full hover:bg-rose-900">
                <img src="~/images/account-icon.png" alt="Account icon" class="w-7 h-7 object-contain" />
            </button>
        </div>
    </header>

    <!-- This bit is the burger menu for the main website navigation (for mobile in future, both for now) -->
    <div id="sideMenu"
        class="fixed top-0 left-0 h-full w-64 transform -translate-x-full transition-transform duration-300 ease-in-out z-40 backdrop-blur-sm bg-white/70 overflow-y-auto">
        <nav class="flex flex-col mt-20 space-y-4 px-6 text-gray-700">
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Seasonal Recipes</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Vegetarian Recipes</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Allergy Friendly Recipes</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Quick Meals</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Budget Meals</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Baked Goods</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Our Chefs</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Request A Recipe</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Subscriptions</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Newsletters</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Download Our App</a>
        </nav>
    </div>

    <!-- This bit is the burger menu for account page stuff (for mobile in future, both for now) -->
    <div id="sideMenuAccount"
        class="fixed top-0 right-0 h-full w-64 transform translate-x-full transition-transform duration-300 ease-in-out z-40 backdrop-blur-sm bg-white/70">
        <nav class="flex flex-col mt-20 space-y-4 px-6 text-gray-700">
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">My Shopping List</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">My Meal Plans</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Favourites</a>
            <a href="#" class="hover:bg-gray-200 px-4 py-2 rounded-md" style="color: inherit;">Account Settings</a>
            <form asp-controller="Sessions" asp-action="Signout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" data-testid="signout" id="signout"
                    class="block w-full text-left hover:bg-gray-200 px-4 py-2 rounded-md">Sign
                    Out</button>
                </form>
        </nav>
    </div>

    <!-- Hidden search bar bit (for mobile) -->
    <div id="mobileSearch"
        class="hidden md:hidden fixed top-[60px] w-full px-4 py-3 shadow-md z-40 rounded-lg backdrop-blur-sm bg-white/70">
        <input type="text" placeholder="Search recipes..."
            class="w-full p-2 rounded-md text-gray-900 focus:outline-none focus:ring-1 focus:ring-rose-900" />
    </div>


    <div class="container mx-auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SueChef - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="/js/navbar.js" asp-append-version="true"></script>
</body>

</html>
