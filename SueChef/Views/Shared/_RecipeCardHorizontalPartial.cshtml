@model SueChef.ViewModels.RecipeCardViewModel

<div class="RecipeCard flex justify-center">
    <div
        class="w-full max-w-4xl bg-white rounded-md overflow-hidden hover:shadow-md transition-all duration-300 border border-gray-700">
        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id">
            <div class="flex justify-between gap-2">

                <!-- Left side: picture -->
                <div class="w-1/3">
                    <img src="@Model.RecipePicturePath" alt="@Model.Title" class="recipe-card__image object-cover" />
                </div>

                <!-- Right side: text -->
                <div class="mt-2 w-full">
                    <div class="space-y-2">
                        <h3 class="recipe-card__title text-md text-orange-700 font-semibold hover:text-orange-800">
                            @Model.Title</h3>
                        <span class="flex items-center gap-1 text-gray-700">
                            ⭐⭐⭐⭐⭐ 947 ratings
                        </span>
                        <p class="recipe-card__description line-clamp-3 break-words">@Model.ShortDescription
                            @Model.ShortDescription</p>
                    </div>
                </div>
            </div>
            <div class="flex items-center justify-between gap-4 px-2">
                <div class="mb-2">
                    @Model.Category
                </div>
                <div class="mb-2">
                    Difficulty: @Model.DifficultyLevel
                </div>
            </div>
        </a>
    </div>
</div>