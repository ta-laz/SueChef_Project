@model SueChef.ViewModels.RecipeCardViewModel

<div class="RecipeCard flex justify-center">
    <div
        class="w-full max-w-6xl bg-white rounded-md overflow-hidden hover:shadow-md transition-all duration-300 border border-gray-700 p-3 md:p-6">
        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id" class="block">

            <!-- Top Section: picture and details -->
            <div class="flex md:items-start gap-3">

                <!-- Left side: picture -->
                <div class="w-[40%]">
                    <img src="@Model.RecipePicturePath" alt="Recipe Picture"
                        class="w-full md:h-64 lg:h-72 object-cover rounded-md border border-gray-300" />
                </div>

                <!-- Right side: text -->
                <div class="flex flex-col justify-between md:w-[65%] w-full">
                    <div>
                        <!-- Recipe Title -->
                        <h3 class="text-2xl hover:text-orange-800 transition mb-1">
                            @Model.Title
                        </h3>

                        <!-- Stars -->
                        <div class="flex gap-4 mb-1">
                            <div class="flex items-center gap-1 text-gray-800 mb-2">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                        class="w-5 h-5 text-yellow-400">
                                        <path
                                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.946a1 1 0 00.95.69h4.147c.969 0 1.371 1.24.588 1.81l-3.357 2.44a1 1 0 00-.364 1.118l1.286 3.946c.3.921-.755 1.688-1.54 1.118L10 14.347l-3.347 2.448c-.784.57-1.838-.197-1.539-1.118l1.286-3.946a1 1 0 00-.364-1.118L2.679 9.373c-.783-.57-.38-1.81.588-1.81h4.147a1 1 0 00.95-.69l1.286-3.946z" />
                                    </svg>
                                }
                            </div>
                            <div class="flex items-center gap-1 text-gray-700 mb-1">
                                947 ratings
                            </div>
                        </div>
                        <p class="recipe-card__description text-gray-700 line-clamp-3 break-words">@Model.Description
                            @Model.Description @Model.Description @Model.Description
                        </p>
                    </div>
                </div>
            </div>

            <!-- Categories bar -->
            <div class="flex bg-gray-100 rounded-md justify-around items-center text-center mt-4 gap-4 py-4 h-14">
                <!-- Category -->
                <div class="flex flex-col items-center w-1/4">
                    <img src="images/flag2.png" alt="Category" class="w-8 h-8 object-fill mb-1" />
                    <span class="text-xs text-gray-600 truncate">@Model.Category</span>
                </div>

                <!-- Vegetarian -->
                @if (@Model.IsVegetarian)
                {
                    <div class="flex flex-col items-center w-1/4">
                        <img src="images/vegetariancartoon.png" alt="Vegetarian" class="w-8 h-8 object-fill mb-1" />
                        <span class="text-xs text-gray-600 truncate">Vegetarian</span>
                    </div>
                }

                <!-- Dairy Free -->
                @if (@Model.IsDairyFree)
                {
                    <div class="flex flex-col items-center w-1/4">
                        <img src="images/dairyfreecartoon.png" alt="Dairy Free" class="w-8 h-8 object-fill mb-1" />
                        <span class="text-xs text-gray-600 truncate">Dairy Free</span>
                    </div>
                }

                <!-- Difficulty -->
                <div class="flex flex-col items-center w-1/4">
                    <img src="~/images/chefshatsymbol.png" alt="Difficulty" class="w-8 h-8 object-fill mb-1" />
                    <span class="text-xs font-medium
                    @(Model.DifficultyLevel == 1
                                              ? "text-green-600"
                                              : Model.DifficultyLevel == 2
                                              ? "text-orange-500"
                                              : "text-red-600")">
                        @(Model.DifficultyLevel == 1 ? "Easy" :
                                                Model.DifficultyLevel == 2 ? "Medium" : "Hard")
                    </span>
                </div>
            </div>
        </a>
    </div>
</div>