@model SueChef.ViewModels.FeaturedRecipeViewModel

<section class="relative w-full max-w-6xl mx-auto mb-4 overflow-hidden shadow-md rounded-b-xl">

        <!-- Background image -->
        <a asp-controller="RecipeDetails" asp-action="Index" asp-route-id="@Model.Id" data-testid="Featured Recipe @Model.Id"
            class="block transition-all duration-300">
            <img src="@Model.RecipePicturePath" alt="Recipe Picture"
                class="w-full h-[70vh] object-cover" />

            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t to-transparent">
            </div>

            <!-- Text Box -->
            <div
                class="absolute bottom-8 translate-x-4 bg-white/30 backdrop-blur-md rounded-md p-6 max-w-xl w-[90%] shadow-lg">
                <h2 class="text-3xl font-semibold text-gray-900 mb-2 drop-shadow-md">
                    @Model.Title
                </h2>
                <p class="text-gray-800 text-md line-clamp-3 mb-2 drop-shadow-sm">
                    @Model.Description
                </p>
                <button
                    class="inline-block bg-orange-500 hover:bg-orange-600 text-white sm:text-sm md:text-md lg:text-md font-medium px-8 py-2 rounded-full transition">
                    View Recipe
                </button>
            </div>
        </a>
</section>