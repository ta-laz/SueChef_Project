@model SueChef.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
    ViewData["HideNavAndFooter"] = true; // Hide header/footer so the page is centered
}

<div class="min-h-screen flex flex-col items-center justify-center text-white text-center p-6">
    <h1 class="text-5xl font-bold mb-4" style="font-family: 'Macondo Swash Caps', cursive;">
        Oops! Something went wrong.
    </h1>

    <p class="text-lg mb-6">We're sorry, but an unexpected error has occurred.</p>

    <img src="~/images/sue-cooking.png" alt="Sue waving" class="w-64 h-64 mb-6 rounded-md" />

    @* @if (Model.ShowRequestId)
    {
        <p class="text-sm text-orange-300">Request ID: <code>@Model.RequestId</code></p>
    } *@

    <a href="/" class="mt-8 bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-full shadow-md transition">
        Back to Home
    </a>
</div>
