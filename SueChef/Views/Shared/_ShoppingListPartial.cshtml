@model Dictionary<string, Dictionary<string, (decimal, string)>>
@if (Model != null && Model.Any())
{
    <section class="bg-orange-100 border-l-4 border-orange-700 p-5 rounded-lg shadow pt-10">
        <div class="flex justify-between items-center mb-4">
            <section class="bg-orange-100 w-full max-w-3xl mx-auto text-center">
            <h1 class="text-2xl font-semibold text-orange-700">Shopping List Draft</h1> 
        </div>
        
        @foreach (var category in Model)
        {
            <div>
                <h2 class="text-xl font-semibold mb-3 text-orange-700 mt-4">
                    @* Capitalise firs tletter of the categories.  *@
                    @char.ToUpper(category.Key[0])@category.Key.Substring(1) 
                </h2>
                <ul class="space-y-2">
                    @foreach (var ingredient in category.Value)
                    {
                        var ingredientId = Guid.NewGuid().ToString(); //Individual id for each checkbox 
                <li class="flex items-center px-3 py-2 border-b-2 border-orange-700 transition">
                    <label class="flex items-center cursor-pointer select-none text-gray-700 text-md sm:text-base transition">
                        <input type="checkbox" name="SelectedIngredients" value="@ingredient.Key" class="hidden peer ingredient-checkbox" checked />
                        <span class="w-5 h-5 rounded-full border-2 border-orange-700 peer-checked:bg-orange-700 transition flex-shrink-0"></span>
                        <span class="ml-3 font-medium line-through peer-checked:no-underline peer-checked:text-gray-800">@ingredient.Value.Item1@ingredient.Value.Item2 â€” @ingredient.Key</span>
                    </label>
                </li>
                    }
                </ul>
            </div>
        }
    </section>
}
