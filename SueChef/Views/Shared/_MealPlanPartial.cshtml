@model SueChef.ViewModels.MealPlanViewModel

<div class="flex justify-center ">
    <!-- Card container -->
    <div class=" hover:shadow-lg w-full max-w-6xl bg-white rounded-md overflow-hidden transition-all duration-300 border-2 border-gray-200 p-3 mb-2 h-full">
        
        <!-- Click anywhere on container and redirect to that Meal Plan -->
        <a asp-controller="MealPlan" asp-action="Show" asp-route-id="@Model.Id"
            class="flex flex-col transition-all duration-300 h-full w-full">
            
            <div class="flex md:items-start gap-3 h-full">
                <!-- Left side: picture -->
                <div class="w-24 h-24 md:w-48 md:h-36 lg:w-56 lg:h-40 flex-shrink-0">
                    <img src="/images/Placeholder_Meal.jpg" alt="Recipe Picture"
                        class="w-full h-full object-cover rounded-md border border-gray-300" />
                </div>

                <!-- Right side: text -->
                <div class="flex flex-col justify-between flex-nowrap md:w-[65%] lg:flex-grow h-full">

                    <!-- Meal Plan Title and Delete Button -->
                    <div class="flex items-center justify-between w-full flex-shrink-0">
                        <h3
                            class="text-2xl text-gray-700 md:text-2xl lg:text-2xl font-medium hover:text-orange-800 transition truncate max-w-[70%]">
                            @Model.MealPlanTitle
                        </h3>
                        <form asp-controller="MealPlan" asp-action="DeleteMealPlan" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this recipe?');" class="inline-flex ml-auto shrink-0 z-10">
                                        @Html.AntiForgeryToken()
                                            <button data-testid="" 
                                                    type="submit" 
                                                    class="bg-red-500 hover:bg-red-600 text-white text-xs font-medium py-1 px-3 rounded-md shadow-md h-[25px] leading-none ">
                                                    Delete
                                            </button> 
                        </form>
                    </div>

                    <p class="recipe-card__description text-gray-600 line-clamp-2 break-words md:text-lg lg:text-lg mt-2">
                        Recipes: @Model.RecipeCount
                    </p>

                    <p class="recipe-card__description text-gray-600 line-clamp-2 break-words md:text-lg lg:text-lg mt-2">
                        Updated On: @Model.UpdatedOn
                    </p>

                </div>
            </div>
        </a>
    </div>
</div>