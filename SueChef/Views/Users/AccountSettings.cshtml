@model SueChef.ViewModels.AccountSettingsViewModel
@{
    ViewData["Title"] = "Account Settings";
}

<div class="min-h-screen bg-orange-50 py-10">
    <div class="max-w-2xl mx-auto bg-white shadow-md rounded-xl p-8 space-y-10">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-rose-700">Account Settings</h1>
        </div>

        <!-- Feedback banners -->
        @if (Model.SuccessMessage != null)
        {
            <div class="bg-green-100 text-green-800 p-3 rounded-md text-center">
                @Html.Raw(Model.SuccessMessage)
            </div>
        }

        @if (Model.DeleteError != null)
        {
            <div class="bg-red-100 text-red-800 p-3 rounded-md text-center">
                @Html.Raw(Model.DeleteError)
            </div>
        }

        <!-- User Info Summary -->
        <div class="border-b pb-4 mb-6">
            <p class="text-gray-700"><strong>Username:</strong> @Model.CurrentUserName</p>
            <p class="text-gray-700"><strong>Email:</strong> @Model.CurrentEmail</p>
            <p class="text-gray-500 text-sm"><strong>Date Joined:</strong> @Model.DateJoined</p>
        </div>

        <!-- 1️⃣ Change Username -->
        <section id="change-username">
            <h2 class="text-xl font-semibold text-rose-700 mb-2">Change Username</h2>
            <form method="post" asp-action="UpdateUsername" asp-controller="Users" class="space-y-4">
                @Html.AntiForgeryToken()
                <input asp-for="ChangeUsername.Id" type="hidden" value="@Model.Id" />

                <div>
                    <label asp-for="ChangeUsername.NewUserName" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangeUsername.NewUserName"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangeUsername.NewUserName" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ChangeUsername.Password" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangeUsername.Password" type="password"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangeUsername.Password" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit"
                        class="px-4 py-2 bg-rose-700 text-white rounded-lg hover:bg-rose-800">
                    Update Username
                </button>
            </form>
        </section>

        <!-- 2️⃣ Change Email -->
        <section id="change-email">
            <h2 class="text-xl font-semibold text-rose-700 mb-2">Change Email</h2>
            <form method="post" asp-action="UpdateEmail" asp-controller="Users" class="space-y-4">
                @Html.AntiForgeryToken()
                <input asp-for="ChangeEmail.Id" type="hidden" value="@Model.Id" />

                <div>
                    <label asp-for="ChangeEmail.NewEmail" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangeEmail.NewEmail" type="email"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangeEmail.NewEmail" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ChangeEmail.Password" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangeEmail.Password" type="password"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangeEmail.Password" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit"
                        class="px-4 py-2 bg-rose-700 text-white rounded-lg hover:bg-rose-800">
                    Update Email
                </button>
            </form>
        </section>

        <!-- 3️⃣ Change Password -->
        <section id="change-password">
            <h2 class="text-xl font-semibold text-rose-700 mb-2">Change Password</h2>
            <form method="post" asp-action="UpdatePassword" asp-controller="Users" class="space-y-4">
                @Html.AntiForgeryToken()
                <input asp-for="ChangePassword.Id" type="hidden" value="@Model.Id" />

                <div>
                    <label asp-for="ChangePassword.CurrentPassword" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangePassword.CurrentPassword" type="password"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangePassword.CurrentPassword" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ChangePassword.NewPassword" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangePassword.NewPassword" type="password"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangePassword.NewPassword" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ChangePassword.ConfirmNewPassword" class="block text-gray-700 font-medium"></label>
                    <input asp-for="ChangePassword.ConfirmNewPassword" type="password"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-rose-200 focus:border-rose-600" />
                    <span asp-validation-for="ChangePassword.ConfirmNewPassword" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit"
                        class="px-4 py-2 bg-rose-700 text-white rounded-lg hover:bg-rose-800">
                    Change Password
                </button>
            </form>
        </section>

        <!-- 4️⃣ Delete Account -->
        <section id="delete-account" class="border-t pt-6">
            <h2 class="text-xl font-semibold text-red-700 mb-2">Delete Account</h2>
            <p class="text-gray-600 text-sm mb-4">
                This action cannot be undone. All your data will be permanently deleted.
            </p>
            <form method="post" asp-action="DeleteAccount" asp-controller="Users" class="space-y-4">
                @Html.AntiForgeryToken()
                <input asp-for="DeleteAccount.Id" type="hidden" value="@Model.Id" />

                <div>
                    <label asp-for="DeleteAccount.ConfirmDeletePassword" class="block text-gray-700 font-medium"></label>
                    <input asp-for="DeleteAccount.ConfirmDeletePassword" type="password"
                           class="w-full mt-1 rounded-md border-gray-200 bg-gray-50 p-2 focus:ring-red-200 focus:border-red-600" />
                    <span asp-validation-for="DeleteAccount.ConfirmDeletePassword" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit"
                        class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                    Delete My Account
                </button>
            </form>
        </section>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
