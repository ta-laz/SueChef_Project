@model SueChef.ViewModels.SignUpViewModel

@{
    Layout = "_Layout";
    ViewData["HideNavAndFooter"] = true;
}

<main class="w-full max-w-sm rounded-lg px-8 py-2 flex flex-col items-center justify-center">

    <!-- Logo -->
    <a href="/" class="flex justify-center">
        <h1 class="text-white text-6xl hover:text-orange-400 mb-8"
            style="font-family: 'Macondo Swash Caps', cursive;">
            SueChef
        </h1>
    </a>

    <!-- Create an account -->

    <h2 class="text-center text-gray-100 text-xl font-medium mb-4">Create an account</h2>

    <p class="text-center text-gray-100 text-xs">Create your free SueChef account and receive our
        exclusive email newsletters</p>

    <!-- Sign-up form container -->

    <div class="">
        <form id="signup-form" asp-action="Create" asp-controller="Users" method="post" class="flex flex-col space-y-4"
            novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-gray-100 mb-2">
            </div>


            <style>
                /* Hides the errors until there are errors */
                .validation-summary-valid {
                    display: none;
                }

                .validation-summary-errors {
                    display: block;
                    /* adds the errors */
                }
            </style>
            <!-- First name block with validation -->

            <div>
                <label for="username" class="mb-1 block text-sm text-gray-100"></label>
                <input asp-for="UserName" id="username" data-testid="username"
                    class="w-full border border-gray-400 focus:border-2 focus:border-rose-800 outline-none rounded-md px-3 py-2"
                    placeholder="Username*" />
                <span asp-validation-for="UserName" class="text-gray-100 text-sm font-bold" id="username-error"></span>
            </div>

            <!-- DOB with validation (more may need adding for auto filling?) -->

            <div>
                <label for="dob" class="mb-1 block text-sm text-gray-100"></label>
                <input asp-for="DOB" id="dob" type="date" data-testid="dob"
                    class="w-full border border-gray-400 focus:border-2 focus:border-rose-800 outline-none rounded-md px-3 py-2" />
                <span asp-validation-for="DOB" class="text-gray-100 text-sm font-bold" id="dob-error"></span>
            </div>
            <!-- email block with validation -->

            <div>
                <label for="email" class="mb-1 block text-sm text-gray-100"></label>
                <input asp-for="Email" data-testid="email" id="email"
                    class="w-full border border-gray-400 focus:border-2 focus:border-rose-800 outline-none rounded-md px-3 py-2"
                    placeholder="Email" />
                <span asp-validation-for="Email" class="text-gray-100 text-sm font-bold" id="email-error"></span>
            </div>
            <!-- password block with validation -->

            <div class="relative">
                <label for="password" class="mb-1 block text-sm text-gray-100"></label>
                <input asp-for="Password" data-testid="password" id="password" type="password"
                    class="w-full border border-gray-400 focus:border-2 focus:border-rose-800 outline-none rounded-md px-3 py-2"
                    placeholder="Password*" />
                <span asp-validation-for="Password" class="text-gray-100 text-sm font-bold" id="password-error"></span>
                <button type="button" class="absolute inset-y-0 right-3 flex items-center text-gray-800"
                    onclick="togglePassword('password')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                </button>
            </div>

            <div class="relative">
                <label for="confirmpassword" class="mb-1 block text-sm text-gray-100"></label>
                <input asp-for="ConfirmPassword" data-testid="confirmpassword" id="confirmpassword" type="password"
                    class="w-full border border-gray-400 focus:border-2 focus:border-rose-800 outline-none rounded-md px-3 py-2"
                    placeholder="Confirm Password" />
                <button type="button" class="absolute inset-y-0 right-3 flex items-center text-gray-800"
                    onclick="togglePassword('confirmpassword')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                </button>
                <span asp-validation-for="ConfirmPassword" class="text-gray-100 text-sm font-bold"
                    id="confirmpassword-error"></span>
            </div>

            <!-- Sign-up submit form -->

            <div class="flex justify-center">
                <button id="submit" data-testid="signup-submit" type="submit" data-testid="submit-signup"
                    class="bg-orange-500 hover:bg-orange-600 text-gray-100 text-sm font-medium w-48 px-4 py-2 rounded-full">Sign
                    Up</button>
            </div>
            <!-- Errors  -->

            @if (ViewBag.Error != null)
            {
                <div id="error-message" class="text-gray-100 mt-2">@ViewBag.Error</div>
            }

            <!-- Go to sign in -->
            <div class="text-center text-gray-100 mt-4">Already have an account?
                <a class="text-gray-100 hover:underline" href="/signin" id="signin">Sign in
                    here</a>
            </div>

            <!-- Divider -->
            <div class="flex items-center my-4">
                <hr class="flex-grow border-gray-300">
                <span class="px-2 text-sm text-gray-100">OR</span>
                <hr class="flex-grow border-gray-300">
            </div>

            <!-- Social Logins -->
            <div class="space-y-2">

                <a href="/login/google" type="button"
                    class="w-full bg-white border border-gray-300 rounded-full py-3 flex items-center justify-center px-3 text-gray-600 space-x-2 hover:bg-gray-200 transition">
                    <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-5 h-5" />
                    <span class="text-sm">Continue with Google</span>
                </a>
            </div>
        </form>

    </div>
</main>


<script>
    function togglePassword(id) {
        const input = document.getElementById(id);
        input.type = input.type === 'password' ? 'text' : 'password';
    }
</script>

<style>
    /* highlight invalid fields */
    input.input-validation-error {
        border-color: #e11d48;
    }

    /* add red asterisk to the label right before the invalid input */
    label+input.input-validation-error,
    label+select.input-validation-error,
    label+textarea.input-validation-error {}

    label:has(+ input.input-validation-error)::after,
    label:has(+ select.input-validation-error)::after,
    label:has(+ textarea.input-validation-error)::after {
        content: " *";
        color: #e11d48;
        font-weight: bold;
    }
</style>

<!-- Ensures boxes have consistent backgrounds regardless of input and browser settings -->
<style>
    input,
    select,
    textarea {
        background-color: #f9fafb;
        /* matches Tailwind's gray-50 */
    }

    input:focus,
    select:focus,
    textarea:focus {
        background-color: #f9fafb;
    }

    /* Prevent Chrome autofill from using yellow background */
    input:-webkit-autofill {
        -webkit-box-shadow: 0 0 0px 1000px #f9fafb inset !important;
        -webkit-text-fill-color: #000 !important;
    }
</style>